<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controllers.RegisterServlet</servlet-class>
    </servlet>   
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>controllers.DashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SetupVotingServlet</servlet-name>
        <servlet-class>controllers.SetupVotingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrganizerActivitiesServlet</servlet-name>
        <servlet-class>controllers.OrganizerActivitiesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParticipantVotesServlet</servlet-name>
        <servlet-class>controllers.ParticipantVotesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VoteNowServlet</servlet-name>
        <servlet-class>controllers.VoteNowServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CloseVoteServlet</servlet-name>
        <servlet-class>controllers.CloseVoteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateReportServlet</servlet-name>
        <servlet-class>controllers.GenerateReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitVoteServlet</servlet-name>
        <servlet-class>controllers.SubmitVoteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditActivityServlet</servlet-name>
        <servlet-class>controllers.EditActivityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewResultServlet</servlet-name>
        <servlet-class>controllers.ViewResultServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SetupVotingServlet</servlet-name>
        <url-pattern>/setup-voting</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrganizerActivitiesServlet</servlet-name>
        <url-pattern>/organizer-activities</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParticipantVotesServlet</servlet-name>
        <url-pattern>/participant-votes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VoteNowServlet</servlet-name>
        <url-pattern>/voteNow</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CloseVoteServlet</servlet-name>
        <url-pattern>/closeVote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateReportServlet</servlet-name>
        <url-pattern>/generateReport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitVoteServlet</servlet-name>
        <url-pattern>/submitVote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditActivityServlet</servlet-name>
        <url-pattern>/edit-activity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewResultServlet</servlet-name>
        <url-pattern>/viewResult</url-pattern>
    </servlet-mapping>
</web-app>
